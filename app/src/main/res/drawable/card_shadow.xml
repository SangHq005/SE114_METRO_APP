<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#1A000000" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <!-- Main background -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#F8FAFC"
                android:angle="135" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="#E2E8F0" />
        </shape>
    </item>
</layer-list>